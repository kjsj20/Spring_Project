$(function(){
	$('#nameEdit').click(function(){
		nameEdit();
	});	
	$('#passEdit').click(function(){
		alert('만세2');
	});	
	$('#phoneEdit').click(function(){
		alert('만세3');
	});	
	$('#birthEdit').click(function(){
		alert('만세4');
	});	
});

function nameEdit(){
	$.ajax({
		url: "/mypage/nameEdit",
		type: "POST",
		data: $('#myPageForm').serialize(),
		success: function(data) {
			if(data == ''){
				alert('수정 실패');
			}
			location.href("/mypage?mypage=1");
		},
		error: function() {
			alert("이름 변경 실패..");
		}
	});
}
