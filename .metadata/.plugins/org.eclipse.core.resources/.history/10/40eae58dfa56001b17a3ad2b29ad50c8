$(function(){
	$('.idSearch').click(function(){
		if($('#phone_nember').val()== ''){
			alert('휴대전화번호를 읿력해주세요');
		} else{
				login();
			}
		});
});

function login(){
	$.ajax({
		url : "/login",
		type: "POST",
		data: $("#searchForm").serialize(),
		success: function(data){
				$('#idVal').text('');
				$('#idVal').html("<font color='#FF6600'>이메일 또는 비밀번호가 <br>일치 하지 않습니다.<br> 다시 한번 확인해주세요 </font>");	
		},
		error: function(){
			alert('id찾기중 에러 발생');
		}
	});
}