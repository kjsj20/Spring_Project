$(function(){
	$('#nameEdit').click(function(){
		nameEdit();
	});	
	$('#passEdit').click(function(){
		alert('만세2');
	});	
	$('#phoneEdit').click(function(){
		alert('만세3');
	});	
	$('#birthEdit').click(function(){
		alert('만세4');
	});	
});
//멤버 이름 수정
function nameEdit(){
	$.ajax({
		url: "/mypage/nameEdit",
		type: "POST",
		data: $('#myPageForm').serialize(),
		success: function(data) {
				if(data == 0){
					alert('이름 수정 실패');
				} else {
					alert('이름 수정 성공');
					location.href("/mypage?mypage=1");									
				}
		},
		error: function() {
			alert("이름 변경 실패..");
		}
	});
}

//멤버 암호 수정
