$(function(){
	$('.radio').click(function(){
		getSubCategory(this.id);
	});
});

function getSubCategory(id){
	$.ajax({
		url: "/lecture/getSubCategory?subCategory_id=" + id,
		success : function(data){
			console.log(data.length);
			var tag = '<label for="radio"><b>상위 카테고리</b></label><br><br>';
				tag += '<label class="topCategory">as';
				tag += '<input type="radio" id = "as" class = "radio" name="radio">'
				tag += '<span class="checkmark"></span>';
				tag += '</label>';
				
			$('#category_sub').html(tag);
		},
		error : function(){
			alert("실패?");
		}
	});
}