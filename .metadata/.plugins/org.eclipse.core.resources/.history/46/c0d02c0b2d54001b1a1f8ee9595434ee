$(function(){
	$('.radio').click(function(){
		getSubCategory(this.id);
	});
});

function getSubCategory(id){
	$.ajax({
		url: "/lecture/getSubCategory?subCategory_id=" + id,
		success : function(data){
			alert('성공?');
			console.log(data);
			var tag = '<label for="radio"><b>상위 카테고리</b></label><br><br>';
				
				
					<label class="topCategory">
				  		<input type="radio" id = class = "radio" name="radio">
				  		<span class="checkmark"></span>
					</label>
				
			$('#category_sub').html('무슨값?');
		},
		error : function(){
			alert("실패?");
		}
	});
}