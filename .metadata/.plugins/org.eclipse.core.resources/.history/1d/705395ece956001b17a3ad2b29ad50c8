<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Lecture_SubCategory">

	<select id="selectByTopId" resultType="Lecture_SubCategory">
		select * from lecture_subcategory where lecture_topcategory_id = #{lecture_topcategory_id} 
	</select>
	
	<resultMap id = "joinLecture" type="Lecture_SubCategory">
		<id column="lecture_subcategory_id" property="lecture_subcategory_id"/>
		<result column="lecture_topcategory_id" property="lecture_topcategory_id"/>
		<result column="lecture_subcategory_name" property="lecture_subcategory_name"/>
		<result column="lecture_subcategory_rank" property="lecture_subcategory_rank"/>
		<collection column="subcategory_id" property=""/>
	</resultMap>
	
	<select id="selectAll">
		select * from lecture_subcategory where lecture_topcategory=#{lecture_topcategory_id}
	</select>
	
</mapper>